<h1><%= "#{@contact.first_name} #{@contact.last_name}" %></h1>

<div class="well">
<p id="notice"><%= notice %></p>

<p>
  <%= image_tag @contact.avatar.url(:thumb), alt: "Contact Pic" %>
</p>
<p>
  <strong>First name:</strong>
  <%= @contact.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @contact.last_name %>
</p>

<p>
  <strong>Business name:</strong>
  <%= @contact.business_name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @contact.address %>
</p>

<p>
  <strong>City:</strong>
  <%= @contact.city %>
</p>

<p>
  <strong>State:</strong>
  <%= @contact.state %>
</p>

<p>
  <strong>Zip:</strong>
  <%= @contact.zip %>
</p>

<p>
  <strong>Phone1:</strong>
  <%= @contact.phone1 %>
</p>

<p>
  <strong>Phone2:</strong>
  <%= @contact.phone2 %>
</p>

<p>
  <strong>Email:</strong>
  <%= @contact.email %>
</p>
</div>
<%= link_to 'Edit', edit_contact_path(@contact), class: "btn btn-info" %> |
<%= link_to 'Back', contacts_path, class: "btn btn-info" %>
