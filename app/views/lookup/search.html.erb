<h1>Look Up a Contact</h1>

<br>

<div class="row">
	<%= form_tag(results_path) do %>
		<div class="form-group col-md-3">
			<%= text_field_tag :name, nil, placeholder: "Search by Name", class: "form-control" %>
		</div>
		<div class="form-group">
			<%= submit_tag "Search", class: "btn btn-primary" %>
		</div>
	<% end %>
</div>

<div class="row">
	<%= form_tag(results_path) do %>
		<div class="form-group col-md-3">
			<%= text_field_tag :city, nil, placeholder: "Search by City", class: "form-control" %>
		</div>
		<div class="form-group">
			<%= submit_tag "Search", class: "btn btn-primary" %>
		</div>
	<% end %>
</div>

<br>

<%= link_to "Enter a New Contact", new_contact_path, class: "btn btn-info" %>
